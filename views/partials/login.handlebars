{{#if user}}
<div style="background-color: white; margin-left: 200px; margin-right: 15px; border-radius: 10px; position: fixed; border-style: ridge;">
	<h5 style="text-align: center; font-size: 20px; font-weight: 600; color: rgb(255, 115, 0);">Welcome back {{user.username}}</h5>
	<ul class="alt">
	<li><a href="/{{type}}s/classes" style="text-decoration: none; font-weight: 600;">My Classes</a></li>
	<li><a href="/users/logout" style="text-decoration: none; font-weight: 600;">Logout</a></li>
	</ul>
</div>
	
{{else}}
<h5 style="color: #fc5001; font-weight: bold;">Student & Instructor Login</h5>
	<form method="post" action="/users/login">
		<label> <b>Username:</b> </label>
		<input type="text" name="username">
		<br> <br>
		<label> <b>Password:</b> </label>
		<input type="password" name="password"> <br> <br>
		<input type="submit" class="button" value="Login" style="font-weight: bold">
	</form>
{{/if}}